<script>
  let folioCliente = 1;
  
  function guardar(){
    folioCliente++;
    document.getElementById("folioCliente").value = folioCliente;
    document.getElementById("formulario").reset();
    folioCliente = 1;
    alert("Formulario guardado!");
  }
</script>

